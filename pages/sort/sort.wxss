/* pages/sort/sort.wxss */
page{
  background: #f0f0f0;
}

.list{
  margin-bottom: 2px;
  background: white;
}

.list image{
  width: 25%;
  height:50px;
  float: left;
  padding: 10px;
}

.message{
  position: relative;
  height: 60px;
  padding: 10px 0 0 0;
}

.type{
  font-size: 12px;
  color: gray;
}

.num{
  position: absolute;
  bottom: 10px;
  left: 30%;
  font-size: 12px;
  color:gray;
}

.ft_in-access {
  padding-right: 13px;
  position: relative;
}
.ft_in-access:after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
          transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}